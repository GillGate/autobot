{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "build",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "typeRoots": [
      "./global.d.ts",
      "./node_modules/@types"
    ],
    "paths": {
      "#root": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/",
    "./build"
  ],
  "esModuleInterop": true,
  "forceConsistentCasingInFileNames": true,
  "strict": true,
  "skipLibCheck": true
}